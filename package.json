{
  "name": "sn-controls-aurelia",
  "version": "1.0.0-beta.2",
  "description": "Aurelia controls for sensenet ECM",
  "main": "./dist/src/index.js",
  "typings": "./src/sn-controls-aurelia.d.ts",
  "scripts": {
    "lint": "node tslint --project ./tsconfig.json",
    "clean": "rimraf dist",
    "commit": "git-cz",
    "pretest": "npm run build",
    "test": "nyc mocha -p tsconfig.json dist/test/index.js",
    "check-coverage": "istanbul check-coverage ",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "postbuild": "./node_modules/.bin/cpx \"src/**/*.html\" dist/src && node-sass src -o dist/src",
    "publish:development": "npm publish --tag development",
    "postinstall": "cpx node_modules/materialize-css/js/date_picker/picker.js node_modules/materialize-css/bin",
    "typedoc": "./node_modules/.bin/typedoc --tsconfig ./tsconfig.typedoc.json --out documentation --excludePrivate --theme default --readme readme.md"
  },
  "files": [
    "dist",
    "src",
    "test",
    "documentation",
    "coverage"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SenseNet/sn-controls-aurelia.git"
  },
  "keywords": [
    "sensenet",
    "ecm",
    "aurelia",
    "controls",
    "components"
  ],
  "author": "SenseNet",
  "license": "GPL-2.0",
  "nyc": {
    "exclude": "dist/test/**/*.*",
    "include": "dist/src/**/*.*",
    "check-coverage": true,
    "cache": true,
    "all": true,
    "reporter": [
      "lcov",
      "text-summary",
      "json"
    ]
  },
  "bugs": {
    "url": "https://github.com/SenseNet/sn-controls-aurelia/issues"
  },
  "homepage": "https://sensenet.com",
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/lodash": "^4.14.66",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.8",
    "aurelia-bootstrapper": "^2.1.1",
    "aurelia-loader-nodejs": "^1.0.1",
    "aurelia-pal-nodejs": "1.0.0-beta.1.0.0",
    "aurelia-templating": "^1.4.2",
    "aurelia-testing": "^1.0.0-beta.3.0.1",
    "chai": "^4.1.0",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "mocha-typescript": "^1.1.7",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.6.1",
    "tslint": "^5.5.0",
    "typedoc": "^0.8.0",
    "typedoc-default-themes": "^0.5.0",
    "typedoc-plugin-external-module-name": "^1.0.9",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "@types/jquery": "^3.2.6",
    "@types/quill": "0.0.31",
    "aurelia-event-aggregator": "^1.0.1",
    "aurelia-framework": "^1.1.4",
    "aurelia-materialize-bridge": "^0.29.0",
    "aurelia-polyfills": "^1.2.1",
    "aurelia-router": "^1.3.0",
    "aurelia-validation": "^1.0.0",
    "cpx": "^1.5.0",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "materialize-css": "^0.100.0",
    "moment": "^2.18.1",
    "moment-timezone": "^0.5.13",
    "node-sass": "^4.5.3",
    "nyc": "^11.0.3",
    "quill": "^1.2.6",
    "sn-client-js": "^2.1.0"
  }
}
